<!doctype html>
<html lang="en-gb">
{{> head}}

<body class="no-js post">

{{> header}}

<div class="wrap__layout">
  <main class="main__container">
    <div class="wrap__container">
      <article class="wrap__content">
        <h1>{{ title }}</h1>
        <time>{{ date }}</time>
        {{{ contents }}}
      </article>
    </div>
  </main>
  {{> aside}}
</div>

  <aside class="wrap__content aside" role="complementary">
    {{#each collections}}
      <h2>Posts</h2>
      <ol class="o-list-disc">
      {{#each this }}
        <li><a href="/{{ path }}">{{ title }}</a></li>
      {{/each}}
      </ol>
    {{/each}}
  </aside>

{{> footer}}

<script src="/assets/scripts.js"></script>
</body>
</html>
